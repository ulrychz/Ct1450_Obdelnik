@page "/obdelnik"
<PageTitle>Obdelník</PageTitle>

<h1>Obdelnik</h1>
<label>
    Zadej stranu A:
    <input type="number" @bind-value="obdelnik.StranaA"/>
</label>

<label>
    Zadej stranu B:
    <input type="number" @bind-value="obdelnik.StranaB" />
</label>

<br />
<button @onclick="obdelnik.Vypocet">Spočítej</button>
<hr />
<label>
    Obsah:
    <input type="number" @bind-value="obdelnik.Obsah" />
</label>
<br />

<label>
    Obvod:
    <input type="number" @bind-value="obdelnik.Obvod" />
</label>
<br />

<label>
    Uhlopříčka:
    <input type="number" @bind-value="obdelnik.Uhlopricka" />
</label>


@code {
    private Model.Obdelnik obdelnik = new Model.Obdelnik();
}
